<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<fragment
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/send_fragment"
    android:name="com.example.senddatabetweenfragmentusingrxjava.SendFragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/receive_fragment"
        android:name="com.example.senddatabetweenfragmentusingrxjava.ReceiveFragment"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_fragment"
        />



</androidx.constraintlayout.widget.ConstraintLayout>